	<action name="fix_scroll_area_height" scope="local">
		set(layer[work1_scrollarea].height,get(layer[work1_desc].height));
		set(layer[work2_scrollarea].height,get(layer[work2_desc].height));
		set(layer[work3_scrollarea].height,get(layer[work3_desc].height));
		set(layer[work4_scrollarea].height,get(layer[work4_desc].height));
		set(layer[work5_scrollarea].height,get(layer[work5_desc].height));
		set(layer[work6_scrollarea].height,get(layer[work6_desc].height));
		set(layer[work7_scrollarea].height,get(layer[work7_desc].height));
		set(layer[work8_scrollarea].height,get(layer[work8_desc].height));
		set(layer[work9_scrollarea].height,get(layer[work9_desc].height));
	</action>
	
	<action name="toggle_workdisplay" scope="local" args="n_work">
		calc(workname, 'workdisplay' + n_work);
		
		if(layer[get(workname)].enabled == true,
			set(layer[get(workname)].enabled,false);
			tween(layer[get(workname)].alpha,0);
			,
			set(layer[get(workname)].enabled,true);
			tween(layer[get(workname)].alpha,1);
		);
		
	</action>
	
	<action name="disable_works" scope="local">
		for(set(i,1), i LT 8, inc(i),
			calc(workname, 'workdisplay' + i);
			set(layer[get(workname)].enabled,false);
			tween(layer[get(workname)].alpha,0);
		);
	</action>
	
